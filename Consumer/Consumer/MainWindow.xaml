<Window x:Class="Consumer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="536" Width="911.333">
    <Grid>
        <TextBox x:Name="txtServer" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="localhost:12345" HorizontalAlignment="Left" Width="140"/>
        <TextBox x:Name="txtCommand" Height="23" Margin="155,37,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button x:Name="execButton" Content="Execute" Margin="0,10,10,0" VerticalAlignment="Top" Click="Button_Click" HorizontalAlignment="Right" Width="75">
            <Button.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFF3F3F3" Offset="0"/>
                    <GradientStop Color="#FFEBEBEB" Offset="0.5"/>
                    <GradientStop Color="#FFDDDDDD" Offset="0.5"/>
                    <GradientStop Color="#FF00D1FF" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <ListBox x:Name="lstServers" Margin="10,66,0,10" HorizontalAlignment="Left" Width="140"/>
        <Button Content="Add" Margin="10,38,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="140" Click="Button_Click_1"/>
        <Button Content="Diskinfo" HorizontalAlignment="Left" Margin="155,10,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_3"/>
        <Button Content="Install" HorizontalAlignment="Left" Margin="235,10,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_4"/>
        <Button Content="Reboot" HorizontalAlignment="Left" Margin="315,10,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_5"/>
        <TextBox x:Name="output" Margin="155,66,10,10" Text="-- output --" FontFamily="Consolas" Background="#FF4B4B4B" Foreground="White" IsUndoEnabled="False" ScrollViewer.CanContentScroll="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
        <Button Content="Ausgeführte Befehle" HorizontalAlignment="Right" Margin="0,10,90,0" VerticalAlignment="Top" Width="130" Click="Button_Click_2"/>
        <Button Content="Hardware" HorizontalAlignment="Left" Margin="395,10,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_7"/>
        <Button Content="Laufende Befehle" HorizontalAlignment="Right" Margin="0,10,225,0" VerticalAlignment="Top" Width="104" Click="Button_Click_8"/>

    </Grid>
</Window>
